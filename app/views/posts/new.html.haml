.wrapper  
  = render "layouts/sidebar" 
  
.report
  .todo
    .right-box
      .right-box__day
        今日もっともやるべき１つ
        %br 
        = @todo.todo1
      .report_Feedback
        今日やるべき大きなこと３つ
        %br
        = @todo.todo3
      .report_business
        今日やるべきこと５つ
        %br
        = @todo.todo5

  .day
    .day-today
      日付
      %br
      = @post.updated_at.strftime("%m月%d日")
    .reports
      .report
        .report_text
          今日の積み上げ
          %br 
          = @post.text
        .report_Feedback
          振り返り 
          %br
          = @post.Feedback
        .report_business
          ビジネスに活かせそうなこと
          %br
          = @post.business
        .report_tomorrow
          反省、明日に活かすこと
          %br
          = @post.tomorrow
    = render "todos/show"