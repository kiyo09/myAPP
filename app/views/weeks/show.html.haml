.wrapper  
  = render "layouts/sidebar"

  .contents
    .content
      .week
        .week_num
          = "#{@week.week}wの目標"
        .week_text
          = @week.text
        .week_Feedback
          = @week.Feedback
        .week_checkbox
          = check_box :week, :checkbox, {class: 'check_box'}, true, false

      .report
        - @posts.each do |post|
          .repo
            = link_to "日付", post_path(@post), class: 'repo'
            %br
            = link_to "#{post.updated_at.strftime("%m月%d日")}", todos_path, class: 'repo'
            %br
            = link_to "TITLE", todos_path, class: 'repo'
            = link_to "#{post.text}", todos_path, class: 'repo'
            %br